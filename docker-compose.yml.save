    image: postgres:16-alpine
    container_name: qualisoft_db
    restart: always
    environment:
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_SB}
      POSTGRES_DB: ${POSTGRES_DB}
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - qualisoft-network

  redis:
    image: redis:7-alpine
    container_name: qualisoft-cache
    restart: always
    command: redis-server --requirepass £{REDIS_PASSWORD}
    networks:
      - qualisoft-network

  backend:
    image: £{DOCKER_IMAGE_BACKEND}
    container_name: qualisoft-api
    restart: always
    depends_on:
      - postgres
      - redis
    env_file: .env
    networks:
      - qualisoft-network

  frontend:
    image: £{DOCKER_IMAGE_FRONTEND}
    container_name: qualisoft-ui
    restart: always
    env_file: .env
    networks:
      - qualisoft-network

  networks:
    qualisoft-network:
    driver: bridge

  volumes:
    postgres_data
